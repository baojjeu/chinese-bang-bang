<div class="panel">
  <div class="panel-body">
    <%= simple_form_for @topic, html: { multiple: true } do |f| %>
      <%= f.input :name, label: 'Learning Topic',
        input_html: { class: 'form-control' },
        wrapper_html: { class: 'form-group' } %>

      <%= f.simple_fields_for :hanyu do |hanyu_field| %>
        <%= hanyu_field.input :meaning,
          input_html: { class: 'form-control' },
          wrapper_html: { class: 'form-group' } %>

        <%= hanyu_field.input :speaking,
          label: 'Speaking File',
          input_html: { class: 'form-control' },
          wrapper_html: { class: 'form-group' } %>
      <% end %>

      <%= f.input :info,
        label: 'Extra Information',
        input_html: { class: 'form-control' },
        wrapper_html: { class: 'form-group' } %>

      <%= f.button :submit, 'Publish', class: 'btn' %>
      <%= f.button :submit, 'Save as Draft', class: 'btn btn-default' %>
    <% end %>
  </div>
</div>