<h1>Sign Up</h1>

<div class="panel panel-default">
  <div class="panel-body">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multiple: true }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :email, required: true, autofocus: true,
        input_html: { class: 'form-control' },
        wrapper_html: { class: 'form-group' } %>

      <%= f.simple_fields_for :profile do |builder| %>
        <%= builder.input :name,
        input_html: { class: 'form-control' },
        wrapper_html: { class: 'form-group' } %>

        <%= builder.input :avatar,
        input_html: { class: 'form-control' },
        wrapper_html: { class: 'form-group' } %>
      <% end %>

      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable),
        input_html: { class: 'form-control' },
        wrapper_html: { class: 'form-group' } %>
      <%= f.input :password_confirmation, required: true,
        input_html: { class: 'form-control' },
        wrapper_html: { class: 'form-group' } %>

      <%= f.button :submit, "Sign up" %>

    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
